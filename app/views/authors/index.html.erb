<body id="id_author">
<p id="notice"><%= notice %></p>

<h1>Listing Authors</h1>

<table>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Email</th>
      <th>Thumbnail</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.fname %></td>
        <td><%= author.lname %></td>
        <td><%= author.email %></td>
        <td><%= author.thumbnail %></td>
        <td><span class="btn1"><%= link_to 'Show', author %></span>
        <span class="btn1"><%= link_to 'Edit', edit_author_path(author) %></span>
        <span class="btn1"><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</body>
<span class="btn" >
<%= link_to 'New Author', new_author_path %>
</span>
